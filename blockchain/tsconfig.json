{
	"extends": "@nomicfoundation/hardhat-toolbox/src/tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"outDir": "dist"
	},
	"include": ["./scripts/**/*.ts"],
